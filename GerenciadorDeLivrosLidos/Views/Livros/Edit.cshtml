@model GerenciadorDeLivrosLidos.Models.Livro

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Livro</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
                <br/>
                <br/>
                <label asp-for="Autor" class="control-label"></label>
                <br/>
                <select asp-for="AutorId" asp-items="@ViewBag.Autores"></select>
                <br/>
                <br/>
                <label asp-for="Lido" class="control-label"></label>
                <input type="checkbox" asp-for="Lido"/>
                <br />
                <br />
                <input type="submit" value="Salvar" style="background-color:green; color:white" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
